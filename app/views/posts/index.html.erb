<h1>Listing posts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>項目</th>
      <th>內文</th>
      <th>張貼者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user %></td>
        <td><%= link_to '顯示', post, class: "btn btn-mini btn-primary" %></td>
        <td><%= link_to '編輯', edit_post_path(post) %></td>
        <td><%= link_to '刪除', post,class: "btn btn-danger", method: :delete, data: { confirm: '確定嗎?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '張貼新文章', new_post_path %>
